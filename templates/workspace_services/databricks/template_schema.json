{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/microsoft/AzureTRE/templates/workspace_services/databricks/template_schema.json",
  "type": "object",
  "title": "Azure Databricks",
  "description": "Installs Azure Databricks.",
  "required": [],
  "properties": {
    "is_exposed_externally": {
      "$id": "#/properties/is_exposed_externally",
      "type": "boolean",
      "title": "Expose externally",
      "description": "Is the Databricks workspace accessible from outside of the workspace network",
      "default": false
    },
    "address_space": {
      "$id": "#/properties/address_space",
      "type": "string",
      "title": "Address space",
      "description": "The address space of the databricks subnets"
    }
  },
  "uiSchema": {
    "address_space": {
      "classNames": "tre-hidden"
    }
  },
  "pipeline": {
    "install": [
      {
        "stepId": "12ba0dad-ea6c-4d0d-9255-daa6212f5ffa",
        "stepTitle": "Upgrade to ensure aware of address space",
        "resourceType": "workspace",
        "resourceAction": "upgrade",
        "properties": []
      },
      {
        "stepId": "main"
      },
      {
        "stepId": "260421b3-7308-491f-b531-e007cdc0aa46",
        "stepTitle": "Add  firewall rules for databricks",
        "resourceTemplateName": "tre-shared-service-firewall",
        "resourceType": "shared-service",
        "resourceAction": "upgrade",
        "properties": [
          {
            "name": "rule_collections",
            "type": "array",
            "arraySubstitutionAction": "replace",
            "arrayMatchField": "name",
            "value": {
              "name": "arc_svc_{{ resource.id }}_databricks",
              "action": "Allow",
              "rules": [
                {
                  "name": "databricks-spark-log-blob-storage",
                  "description": "To store Azure Databricks audit and cluster logs (anonymized / masked) for support and troubleshooting.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "target_fqdns": "{{ resource.properties.log_blob_storage_domains }}",
                  "protocols": [
                    {
                      "port": "443",
                      "type": "Https"
                    },
                    {
                      "port": "80",
                      "type": "Http"
                    }
                  ]
                },
                {
                  "name": "databricks-artifact-blob-storage",
                  "description": "Stores Databricks Runtime images to be deployed on cluster nodes.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "target_fqdns": "{{ resource.properties.artifact_blob_storage_domains }}",
                  "protocols": [
                    {
                      "port": "443",
                      "type": "Https"
                    },
                    {
                      "port": "80",
                      "type": "Http"
                    }
                  ]
                },
                {
                  "name": "databricks-dbfs",
                  "description": "Azure Databricks workspace root storage.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "target_fqdns": [
                    "{{ resource.properties.dbfs_blob_storage_domain }}"
                  ],
                  "protocols": [
                    {
                      "port": "443",
                      "type": "Https"
                    },
                    {
                      "port": "80",
                      "type": "Http"
                    }
                  ]
                },
                {
                  "name": "databricks-public-repo",
                  "description": "Public Repositories for Python and R Libraries. 'cdnjs' is used by Ganglia UI.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "target_fqdns": [
                    "*.pypi.org",
                    "cdnjs.com",
                    "cdnjs.cloudflare.com"
                  ],
                  "protocols": [
                    {
                      "port": "443",
                      "type": "Https"
                    },
                    {
                      "port": "80",
                      "type": "Http"
                    }
                  ]
                },
                {
                  "name": "databricks-scc-relay",
                  "description": "Databricks SCC Relay IP.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "target_fqdns": "{{ resource.properties.scc_relay_domains }}",
                  "protocols": [
                    {
                      "port": "443",
                      "type": "Https"
                    },
                    {
                      "port": "80",
                      "type": "Http"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    ],
    "upgrade": [
      {
        "stepId": "12baaaad-ea6c-4d0d-9255-d316212f5ffa",
        "stepTitle": "Upgrade to ensure aware of address space",
        "resourceType": "workspace",
        "resourceAction": "upgrade",
        "properties": []
      },
      {
        "stepId": "main"
      },
      {
        "stepId": "260421b3-7308-491f-b531-e007cdc0aa46",
        "stepTitle": "Add  firewall rules for databricks",
        "resourceTemplateName": "tre-shared-service-firewall",
        "resourceType": "shared-service",
        "resourceAction": "upgrade",
        "properties": [
          {
            "name": "network_rule_collections",
            "type": "array",
            "arraySubstitutionAction": "replace",
            "arrayMatchField": "name",
            "value": {
              "name": "nrc_svc_{{ resource.id }}_databricks",
              "action": "Allow",
              "rules": [
                {
                  "name": "databricks-webapp",
                  "description": "Communication with Azure Databricks webapp.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "destination_addresses": "{{ resource.properties.webapp_destination_addresses }}",
                  "destination_ports": [
                    "443"
                  ],
                  "protocols": [
                    "TCP"
                  ]
                },
                {
                  "name": "databricks-extended-infrastructure-ip",
                  "description": "Databricks extended infrastucture IP.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "destination_addresses": "{{ resource.properties.extended_infrastructure_destination_addresses }}",
                  "destination_ports": [
                    "443"
                  ],
                  "protocols": [
                    "TCP"
                  ]
                },
                {
                  "name": "databricks-sql-metastore",
                  "description": "Stores metadata for databases and child objects in a Azure Databricks workspace.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "destination_addresses": "{{ resource.properties.metastore_domains }}",
                  "destination_ports": [
                    "3306"
                  ],
                  "protocols": [
                    "TCP"
                  ]
                },
                {
                  "name": "databricks-observability-eventhub",
                  "description": "Transit for Azure Databricks on-cluster service specific telemetry.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "destination_addresses": "{{ resource.properties.event_hub_endpoint_domains }}",
                  "destination_ports": [
                    "9093"
                  ],
                  "protocols": [
                    "TCP"
                  ]
                }
              ]
            }
          },
          {
            "name": "rule_collections",
            "type": "array",
            "arraySubstitutionAction": "replace",
            "arrayMatchField": "name",
            "value": {
              "name": "arc_svc_{{ resource.id }}_databricks",
              "action": "Allow",
              "rules": [
                {
                  "name": "databricks-spark-log-blob-storage",
                  "description": "To store Azure Databricks audit and cluster logs (anonymized / masked) for support and troubleshooting.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "target_fqdns": "{{ resource.properties.log_blob_storage_domains }}",
                  "protocols": [
                    {
                      "port": "443",
                      "type": "Https"
                    }
                  ]
                },
                {
                  "name": "databricks-artifact-blob-storage",
                  "description": "Stores Databricks Runtime images to be deployed on cluster nodes.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "target_fqdns": "{{ resource.properties.artifact_blob_storage_domains }}",
                  "protocols": [
                    {
                      "port": "443",
                      "type": "Https"
                    }
                  ]
                },
                {
                  "name": "databricks-dbfs",
                  "description": "Azure Databricks workspace root storage.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "target_fqdns": [
                    "{{ resource.properties.dbfs_blob_storage_domain }}"
                  ],
                  "protocols": [
                    {
                      "port": "443",
                      "type": "Https"
                    }
                  ]
                },
                {
                  "name": "databricks-public-repo",
                  "description": "Public Repositories for Python and R Libraries. 'cdnjs' is used by Ganglia UI.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "target_fqdns": [
                    "*.pypi.org",
                    "cdnjs.com",
                    "cdnjs.cloudflare.com"
                  ],
                  "protocols": [
                    {
                      "port": "443",
                      "type": "Https"
                    }
                  ]
                },
                {
                  "name": "databricks-scc-relay",
                  "description": "Databricks SCC Relay IP.",
                  "source_addresses": "{{ resource.properties.databricks_address_prefixes }}",
                  "target_fqdns": "{{ resource.properties.scc_relay_domains }}",
                  "protocols": [
                    {
                      "port": "443",
                      "type": "Https"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    ],
    "uninstall": [
      {
        "stepId": "260421b3-7308-491f-b531-e007cdc0ff48",
        "stepTitle": "Remove network firewall rules for databricks",
        "resourceTemplateName": "tre-shared-service-firewall",
        "resourceType": "shared-service",
        "resourceAction": "upgrade",
        "properties": [
          {
            "name": "network_rule_collections",
            "type": "array",
            "arraySubstitutionAction": "remove",
            "arrayMatchField": "name",
            "value": {
              "name": "nrc_svc_{{ resource.id }}_databricks"
            }
          },
          {
            "name": "rule_collections",
            "type": "array",
            "arraySubstitutionAction": "remove",
            "arrayMatchField": "name",
            "value": {
              "name": "arc_svc_{{ resource.id }}_databricks"
            }
          }
        ]
      },
      {
        "stepId": "main"
      }
    ]
  }
}
