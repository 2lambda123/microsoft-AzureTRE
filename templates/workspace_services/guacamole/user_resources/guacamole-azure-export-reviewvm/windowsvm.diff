+  destination_address_prefix  = "INTERNET"
+  destination_port_range      = "443"
+  direction                   = "Outbound"
+  name                        = "to-internet"
+  network_security_group_name = azurerm_network_security_group.vm_nsg.name
+  priority                    = 120
+  protocol                    = "Tcp"
